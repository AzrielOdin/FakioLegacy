<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.FakioLegacy" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <item name="colorPrimary">?attr/colorSurface</item>
        <item name="colorPrimaryVariant">@color/burgundy</item>
        <item name="colorOnPrimary">@color/black</item>
        <item name="android:statusBarColor">?attr/colorPrimary</item>
    </style>

    <style name="Theme.FakioLegacy.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.FakioLegacy.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.FakioLegacy.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="Theme.FakioLegacy.AppBar" parent="Theme.FakioLegacy">
        <item name="android:titleTextColor">@color/fakio_red</item>
    </style>
</resources>